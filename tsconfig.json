{
	"extends": "tsconfig_base.json",
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"lib": ["es2020", "esnext.asynciterable"],
		"baseUrl": ".",
		"rootDir": "src",
		"outDir": "dist",
		"paths": {
			"@/*": ["./src/*"]
		},
		"include": ["src/**/*.ts"],
		"exclude": ["node_modules/", "scripts/", "archive/"]
	}
}
